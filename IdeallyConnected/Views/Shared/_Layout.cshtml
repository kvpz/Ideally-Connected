<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>IdeallyConnected - @ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <script type="text/javascript" src="https://d3js.org/d3.v4.min.js"></script>

    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="description" content="">

</head>
<body ng-app="ICApp" ng-strict-di>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Ideally Connected","Index","Home",new { area = "" },new { @class = "navbar-brand" })
                @Html.Partial("LayoutNavBar")
            </div>
            <div class="navbar-collapse collapse">
                @Html.Partial("_LoginPartial")
            </div>
        </div>

    </div>

    @Scripts.Render("~/bundles/angular")
    @Scripts.Render("~/bundles/jquery")
    <script src="~/App/app.module.js"></script>
    <script src="~/App/app.config.js"></script>
    <script src="~/App/core/core.module.js"></script>
    <script src="~/App/core/checkmark/checkmark.filter.js"></script>
    <script src="~/App/core/user/user.module.js"></script>
    <script src="~/App/core/user/user.service.js"></script>
    <script src="~/App/user-list/user-list.module.js"></script>
    <script src="~/App/user-list/user-list.component.js"></script>
    <script src="~/App/user-detail/user-detail.module.js"></script>
    <script src="~/App/user-detail/user-detail.component.js"></script>
    <script src="~/App/bower_components/html5-boilerplate/dist/js/vendor/modernizr-2.8.3.min.js"></script>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <div class="navbar-collapse collapse">
            <ul style="list-style-type: none;">
                <li>@Html.ActionLink("About","About","Home")</li>
                <li>@Html.ActionLink("Contact","Contact","Home")</li>
            </ul>
        </div>
        <footer>
            <p>&copy; @DateTime.Now.Year - Ideally Connected</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/bootstrap")
    @if(IsSectionDefined("Scripts")) {
    @RenderSection("Scripts",required: false)
        <script type="text/javascript">
            @RenderSection("jsCode", required: false)
        </script>
    }
</body>


</html>
